      <% frecuencia_peso = 10 %>
    <% elsif (@patient.manejo_manual == "b5") && (@patient.nivel_de_peso == "h1") %>
      <% frecuencia_peso = 6 %>
    <% elsif (@patient.manejo_manual == "b5") && (@patient.nivel_de_peso == "h2") %>
      <% frecuencia_peso = 8 %>
