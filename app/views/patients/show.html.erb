      <% postura_peso = 8 %>
    <% elsif @patient.postura_espalda == "a2" && @patient.nivel_de_peso == "h4" %>
      <% postura_peso = 10 %>
    <% elsif @patient.postura_espalda == "a3" && @patient.nivel_de_peso == "h1" %>
      <% postura_peso = 6 %>
    <% elsif @patient.postura_espalda == "a3" && @patient.nivel_de_peso == "h2" %>
      <% postura_peso = 8 %>
